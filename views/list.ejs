<html>

<head>

    <title>Honda Tires</title>

    <link href="css/pricing.css" rel="stylesheet">
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300i,400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        background-color:#cececeae;
        font-family: 'Nunito', sans-serif;
        padding-top: 0px;
        margin: 0;
        /* font-family: Arial, Helvetica, sans-serif; */
      }
</style>
</head>

<body>

    <div class="topnav">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <a href="/logout">Log Out</a>
        <div class="search-container">
            <form action="/details" method="post" class="form-inline">
                <input type="text" name="fSize" placeholder="Search for Size" class="form-control mr-sm-2">
                <button type="search" name="task" style="padding-left: 1px;" class="rounded-pill"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>
    <a class="cb" href="/carts" role="button">Go To Cart     <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </svg></a>    
      
      <div class="gallery">
        <% items.forEach(function(item) { %>
    <div class="content" style="background-color: aliceblue;">
        <form action="/carts" method="post">
        <h5 name="tb"><%= item.brand %></h5>
        <img name="tm" src="data:image/<%=item.img.contentType%>;base64,
        <%=item.img.data.toString('base64')%>">
        <h3 name="ts"><%= item.size %></h3>
        <p name="tc"><%= item.car %></p>
        <p name="tp" style="font-size: large;">$<%= item.price %></p>
        <span style="white-space: 2px;">QTY</span>
        <input type="number" name="qt" min="0" max="30" value="0" style="text-align: center; ">
    <br>
    <ul>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        </ul>
    <button type="submit" name="addT" value="<%= item.id %>" onchange="this.form.submit()" class="buy-1">Add to cart</button>
    </form>
    </div>
    <% }) %>
    </div>

</body>

</html>

